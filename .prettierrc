{
  "semi": true,
  "arrowParens": "always",
  "singleQuote": true,
  "trailingComma": "es5",
  "bracketSpacing": true,
  "endOfLine": "lf",
  "htmlWhitespaceSensitivity": "ignore",
  "printWidth": 100,
  "tabWidth": 2,
  "overrides": [
    { "files": "**/package.json", "options": { "parser": "json" } },
    { "files": ".prettierrc", "options": { "parser": "json" } },
    { "files": "server", "options": {} },
    { "files": "client", "options": {} }
  ], 
  "plugins": [
    "prettier-plugin-tailwindcss"
  ],
  "pluginSearchDirs": false
}
